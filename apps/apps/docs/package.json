{
  "name": "@repo/docs",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Nelson Lai <me@nelsonlai.dev> (https://github.com/nelsonlaidev/)",
  "type": "module",
  "scripts": {
    "build": "next build --turbo",
    "build:mdx": "fumadocs-mdx",
    "clean": "rm -rf .next .turbo .source",
    "dev": "next dev --turbo -p 3001",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "start": "next start -p 3001",
    "type-check": "tsc --noEmit",
    "typegen": "next typegen"
  },
  "lint-staged": {
    "*.{js,mjs,jsx,ts,mts,tsx}": "eslint --fix",
    "*": [
      "prettier --write --ignore-unknown",
      "cspell --no-progress --no-summary --no-must-find-files --unique"
    ]
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "fumadocs-core": "16.0.6",
    "fumadocs-mdx": "13.0.3",
    "fumadocs-ui": "16.0.6",
    "hast-util-to-jsx-runtime": "2.3.6",
    "lucide-react": "0.548.0",
    "next": "16.0.10",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "2.15.4",
    "shiki": "3.14.0",
    "sonner": "2.0.7"
  },
  "devDependencies": {
    "@nelsonlaidev/eslint-config": "2.3.3",
    "@tailwindcss/postcss": "4.1.16",
    "@types/mdx": "2.0.13",
    "@types/node": "24.9.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "postcss-load-config": "6.0.1",
    "tailwindcss": "4.1.16",
    "tw-animate-css": "1.4.0"
  }
}
