{
  "name": "nelsonlai-dev",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Nelson Lai <me@nelsonlai.dev> (https://github.com/nelsonlaidev/)",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:apps": "turbo build --filter=./apps/*",
    "build:mdx": "turbo build:mdx",
    "check": "pnpm lint && pnpm type-check && pnpm format:check && pnpm check:spelling && pnpm check:knip && pnpm check:i18n",
    "check:i18n": "i18n-check -s en -l packages/i18n/src/messages -u apps/web/src -f next-intl",
    "check:knip": "pnpm with-env knip",
    "check:spelling": "cspell --no-progress --no-summary --no-must-find-files --unique",
    "clean": "turbo clean && rm -rf .turbo coverage",
    "db:check": "turbo db:check",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:push": "turbo db:push",
    "db:reset": "turbo db:reset",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "dev": "turbo dev",
    "dev:docs": "turbo dev --filter=./apps/docs",
    "dev:packages": "turbo dev --filter=./packages/*",
    "dev:web": "turbo dev --filter=@repo/web",
    "format:check": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "format:write": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "preinstall": "npx --yes only-allow pnpm",
    "lint": "turbo lint && eslint . --max-warnings 0",
    "lint:fix": "turbo lint:fix && eslint --fix .",
    "prepare": "lefthook install",
    "test:e2e": "turbo test:e2e",
    "test:e2e:inspector": "turbo test:e2e:inspector",
    "test:e2e:install": "playwright install",
    "test:e2e:ui": "turbo test:e2e:ui",
    "test:unit": "pnpm with-env vitest run",
    "test:unit:coverage": "pnpm with-env vitest run --coverage",
    "test:unit:ui": "pnpm with-env vitest --ui",
    "test:unit:watch": "pnpm with-env vitest watch",
    "type-check": "turbo type-check",
    "typegen": "turbo typegen",
    "with-env": "dotenvx run -f .env.local --ignore=MISSING_ENV_FILE --"
  },
  "lint-staged": {
    "*.{js,mjs,jsx,ts,mts,tsx}": "eslint --fix",
    "*": [
      "prettier --write --ignore-unknown",
      "cspell --no-progress --no-summary --no-must-find-files --unique"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@cspell/dict-redis": "1.0.7",
    "@dotenvx/dotenvx": "1.51.0",
    "@lingual/i18n-check": "0.8.12",
    "@nelsonlaidev/eslint-config": "2.3.3",
    "@nelsonlaidev/prettier-config": "0.1.0",
    "@nelsonlaidev/typescript-config": "1.0.0",
    "@playwright/test": "1.56.1",
    "@types/node": "24.9.2",
    "@vitest/coverage-v8": "4.0.4",
    "@vitest/ui": "4.0.4",
    "cross-env": "10.1.0",
    "cspell": "9.2.2",
    "czg": "1.12.0",
    "eslint": "9.39.1",
    "jsdom": "27.0.1",
    "knip": "5.66.4",
    "lefthook": "2.0.2",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "prettier-plugin-packagejson": "2.5.19",
    "tsx": "4.20.6",
    "turbo": "2.5.8",
    "typescript": "5.9.3",
    "vitest": "4.0.4"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "next": "16.0.10"
  }
}
