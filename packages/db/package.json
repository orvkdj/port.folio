{
  "name": "@repo/db",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Nelson Lai <me@nelsonlai.dev> (https://github.com/nelsonlaidev/)",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "clean": "rm -rf .turbo",
    "db:check": "pnpm with-env drizzle-kit check",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:migrate": "pnpm with-env drizzle-kit migrate",
    "db:push": "pnpm with-env drizzle-kit push",
    "db:reset": "pnpm with-env tsx ./src/reset.ts",
    "db:seed": "pnpm with-env tsx ./src/seed.ts",
    "db:studio": "pnpm with-env drizzle-kit studio",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit",
    "with-env": "dotenvx run -f ../../.env.local --ignore=MISSING_ENV_FILE --"
  },
  "lint-staged": {
    "*.{js,mjs,jsx,ts,mts,tsx}": "eslint --fix",
    "*": [
      "prettier --write --ignore-unknown",
      "cspell --no-progress --no-summary --no-must-find-files --unique"
    ]
  },
  "dependencies": {
    "@paralleldrive/cuid2": "3.0.4",
    "@repo/env": "workspace:*",
    "drizzle-orm": "0.44.7"
  },
  "devDependencies": {
    "@nelsonlaidev/eslint-config": "2.3.3",
    "@nelsonlaidev/typescript-config": "1.0.0",
    "@types/node": "24.9.2",
    "consola": "3.4.2",
    "drizzle-kit": "0.31.6",
    "execa": "9.6.0",
    "postgres": "3.4.7"
  },
  "peerDependencies": {
    "postgres": ">=3.0.0"
  }
}
