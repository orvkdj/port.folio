{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "ANALYZE",
    "NEXT_RUNTIME",
    "DATABASE_URL",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "IP_ADDRESS_SALT",
    "BETTER_AUTH_SECRET",
    "SPOTIFY_CLIENT_ID",
    "SPOTIFY_CLIENT_SECRET",
    "SPOTIFY_REFRESH_TOKEN",
    "GOOGLE_API_KEY",
    "GITHUB_TOKEN",
    "WAKATIME_API_KEY",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "DISCORD_WEBHOOK_URL",
    "RESEND_API_KEY",
    "AUTHOR_EMAIL",
    "JWT_SECRET",
    "CLOUDFLARE_R2_ENDPOINT",
    "CLOUDFLARE_R2_ACCESS_KEY_ID",
    "CLOUDFLARE_R2_SECRET_ACCESS_KEY",
    "CLOUDFLARE_R2_BUCKET_NAME",
    "CLOUDFLARE_R2_PUBLIC_URL",
    "POSTHOG_ENV_ID",
    "POSTHOG_API_KEY",
    "NEXT_PUBLIC_SITE_URL",
    "NEXT_PUBLIC_VERCEL_ENV",
    "NEXT_PUBLIC_VERCEL_BRANCH_URL",
    "NEXT_PUBLIC_UMAMI_URL",
    "NEXT_PUBLIC_UMAMI_WEBSITE_ID",
    "NEXT_PUBLIC_POSTHOG_HOST",
    "NEXT_PUBLIC_POSTHOG_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", ".content-collections/**", ".source/**"]
    },
    "build:mdx": {
      "outputs": [".content-collections/**", ".source/**"]
    },
    "clean": {
      "cache": false
    },
    "db:check": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false,
      "persistent": true
    },
    "db:reset": {
      "cache": false,
      "persistent": true
    },
    "db:seed": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "test:e2e": {
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:e2e:inspector": {
      "cache": false,
      "persistent": true
    },
    "test:e2e:ui": {
      "cache": false,
      "persistent": true
    },
    "type-check": {},
    "typegen": {
      "outputs": [".next/types/**"]
    }
  },
  "ui": "tui"
}
